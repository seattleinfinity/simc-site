{% macro articlePreview(title, date, blurb, image, link, isMain=false) %}
<article class="{{ 'sm:col-span-2 sm:row-span-2 h-full' if isMain }} col-span-1 row-span-1 mb-6" data-aos="fade-up">
  <a href="{{ link }}" class="flex flex-col items-start w-full h-full">

    {# Photo #}
    <div class="flex-grow self-center w-full">
      <img src="{{ image }}" alt="Cover photo" class="object-cover aspect-video w-full h-full">
    </div>

    {# Content #}
    <div class="w-full pt-5">
      <h3>{{ title }}</h3>
      <p class="pb-4 text-gray-500 dark:text-gray-400">{{ date.toLocaleString() }}</p>
      <p class="text-sm">{{ blurb }}</p>
    </div>
  </a>
</article>
{% endmacro %}
