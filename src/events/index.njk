{% macro eventCard(title, image, blurb, url) %}
  <a href="{{ url }}" class="relative min-h-[20rem] group">
    <div class="absolute bg-black w-full h-full overflow-clip rounded-xl">
      {# Alt should probably be made more helpful #}
      <img src="{{ image }}" alt="{{ title }}" class="top-0 left-0 aspect-square object-cover opacity-30 blur-lg group-hover:blur-sm duration-500">
    </div>
    <div class="flex flex-col items-center justify-center absolute w-full h-full px-12 text-white transition-all">
      <h3 class="z-10 text-center">{{ title }}</h3>
      <div class="max-h-0 overflow-hidden group-hover:max-h-full transition-all ease-in-out duration-1000">
        <span class=" mt-4 text-neutral-200">{{ blurb }}</span>
      </div>
    </div>
  </a>
{% endmacro %}


